<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="approval_email_template" model="mail.template">
            <field name="name">Submit Approvel</field>
            <field name="model_id" ref="model_travel_expenses_detail"/>
            <field name="email_from">${object.employee_id.work_email}</field>
            <field name="subject">Submit Approvel</field>
            <field name="partner_to">${object.approval_send_to.user_id.partner_id.id}</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.employee_id.user_id.partner_id.lang}</field>
            <field name="body_html" type="xml">
                <p>Dear ${object.approval_send_to.name},</p>
                <p>The Travel Expense ${object.travel_id.name} has been sent to you for approval.</p>
                <p style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (object._name, object.id)"
                       style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                        View Travel Expense
                    </a>
                </p>
            </field>
        </record>

        <record id="new_travel_request_email_template" model="mail.template">
            <field name="name">New Travel Request</field>
            <field name="model_id" ref="model_travel_request"/>
            <field name="email_from">${object.employee_id.work_email}</field>
            <field name="subject">New Travel Request</field>
            <field name="partner_to">${object.reporting_manager_id.user_id.partner_id.id}</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">${object.employee_id.user_id.partner_id.lang}</field>
            <field name="body_html" type="xml">
                <p>Dear ${object.reporting_manager_id.name},</p>
                <p>The Travel Request ${object.travel_id.name} has been sent to you.</p>
                <p style="margin: 16px 0px 16px 0px;">
                    <a t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (object._name, object.id)"
                       style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                        View Travel Request
                    </a>
                </p>
            </field>
        </record>

    </data>
</odoo>